<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEvent"
    android:layout_marginHorizontal="10dp" >

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="80dp"
        android:layout_marginVertical="5dp"
        android:layout_marginBottom="606dp"
        android:text="@string/toptext_save" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" />

    <EditText
        android:id="@+id/editStartTimetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextName"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Start time"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/editEndTimetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editStartTimetext"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="End time"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/editDatatext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEndTimetext"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="date"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/editNameLocation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDatatext"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="locÑ„tion"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/editCategories2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNameLocation"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="categories"
        android:focusable="false"
        />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:onClick="closeActivity" />


</RelativeLayout>